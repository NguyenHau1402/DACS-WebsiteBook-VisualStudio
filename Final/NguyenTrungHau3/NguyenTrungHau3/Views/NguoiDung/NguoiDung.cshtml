@model IEnumerable<NguyenTrungHau3.Models.KhachHang>
@{
    ViewBag.Title = "NguoiDung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Khách hàng</h2>



<table class="table">
    <tr>
        <th> Mã khách hàng:  </th>
        <th> Họ tên:  </th>
        
        <th> Địa chỉ:  </th>
        <th> Điện thoại:  </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@Html.DisplayFor(modelItem => item.makh)</td>
    <td>@Html.DisplayFor(modelItem => item.hoten)</td>
    
    <td>@Html.DisplayFor(modelItem => item.diachi)</td>
    <td>@Html.DisplayFor(modelItem => item.dienthoai)</td>
    <td>
       
        @Html.ActionLink("Detail", "Detail", new { id = item.makh }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.makh })
    </td>
</tr>
    }
</table>

